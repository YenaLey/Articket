{
  "swagger": "2.0",
  "info": {
    "title": "CO SHOW 전시회 체험 서비스 API",
    "description": "사용자가 이미지를 업로드하고, 스타일 변환을 적용하며, 이미지를 다운로드할 수 있는 API입니다.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    { "name": "이미지 업로드", "description": "이미지 업로드 API" },
    { "name": "이미지 변환", "description": "이미지 변환 및 스타일 조정 API" },
    { "name": "폴더 초기화", "description": "폴더 초기화 API" }
  ],
  "paths": {
    "/upload-image": {
      "post": {
        "tags": ["이미지 업로드"],
        "summary": "이미지 업로드",
        "description": "이미지 변환을 위해 이미지를 업로드합니다.",
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "in": "formData",
            "name": "image",
            "type": "file",
            "description": "업로드할 이미지 파일",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "이미지 업로드 성공",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" },
                "image_path": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "이미지 파일이 없습니다."
          }
        }
      }
    },
    "/generate-style-images/{style}": {
      "post": {
        "tags": ["이미지 변환"],
        "summary": "스타일 변환된 이미지 생성",
        "description": "선택한 화가의 스타일을 적용하여 업로드된 이미지에 스타일 변환을 적용합니다.",
        "parameters": [
          {
            "in": "path",
            "name": "style",
            "description": "이미지 스타일 (portrait 또는 landscape)",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "이미지 변환 성공",
            "schema": {
              "type": "object",
              "properties": {
                "generated_images": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          },
          "400": {
            "description": "이미지 또는 스타일 정보 누락"
          },
          "500": {
            "description": "이미지 생성 실패"
          }
        }
      }
    },
    "/generate-enhanced-images/{style}": {
      "post": {
        "tags": ["이미지 변환"],
        "summary": "그림을 스타일로 변환",
        "description": "사용자가 그린 그림을 해당 화가의 스타일로 변환합니다.",
        "parameters": [
          {
            "in": "path",
            "name": "style",
            "description": "이미지 스타일 (portrait 또는 landscape)",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "사용자가 입력한 추가 정보",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_input": {
                  "type": "string",
                  "example": "사용자가 추가한 설명"
                }
              },
              "required": ["user_input"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "이미지 변환 성공",
            "schema": {
              "type": "object",
              "properties": {
                "generated_images": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          },
          "400": {
            "description": "이미지 또는 사용자 입력 정보 누락"
          },
          "500": {
            "description": "이미지 생성 실패"
          }
        }
      }
    },
    "/get-generated-images": {
      "get": {
        "tags": ["이미지 변환"],
        "summary": "생성된 이미지 가져오기",
        "description": "생성된 이미지 목록을 반환합니다.",
        "responses": {
          "200": {
            "description": "이미지 목록 반환 성공",
            "schema": {
              "type": "object",
              "properties": {
                "generated_images": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/reset-folders": {
      "post": {
        "tags": ["폴더 초기화"],
        "summary": "폴더 초기화",
        "description": "업로드된 이미지와 생성된 이미지 폴더의 내용을 초기화합니다.",
        "responses": {
          "200": {
            "description": "폴더 초기화 성공",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}

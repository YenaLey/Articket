{
  "swagger": "2.0",
  "info": {
    "title": "CO SHOW 전시회 체험 서비스 API",
    "description": "사용자가 이미지를 업로드하고, 스타일 변환을 적용하며, 이미지를 다운로드할 수 있는 API입니다.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    { "name": "이미지 업로드", "description": "이미지 업로드 API" },
    { "name": "이미지 변환", "description": "이미지 변환 및 스타일 조정 API" },
    { "name": "폴더 초기화", "description": "폴더 초기화 API" }
  ],
  "paths": {
    "/upload-image": {
      "post": {
        "tags": ["이미지 업로드"],
        "summary": "이미지 업로드",
        "description": "이미지를 업로드합니다.",
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "in": "formData",
            "name": "image",
            "type": "file",
            "description": "업로드할 이미지 파일",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "이미지 업로드 성공",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" },
                "image_path": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "이미지 파일이 없습니다."
          }
        }
      }
    },
    "/generate-images/{style}": {
      "post": {
        "tags": ["이미지 변환"],
        "summary": "이미지 생성",
        "description": "사진 원본 또는 간단한 그림을 화가들의 스타일로 변환합니다.",
        "parameters": [
          {
            "in": "path",
            "name": "style",
            "description": "이미지 종류 (portrait 또는 landscape)",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "이미지 변환 성공",
            "schema": {
              "type": "object",
              "properties": {
                "generated_images": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          },
          "400": {
            "description": "이미지 또는 스타일 정보 누락"
          },
          "500": {
            "description": "이미지 생성 실패"
          }
        }
      }
    },
    "/get-generated-images": {
      "get": {
        "tags": ["이미지 변환"],
        "summary": "생성된 이미지 및 업로드된 이미지 가져오기",
        "description": "생성된 이미지와 업로드된 이미지 목록을 반환합니다.",
        "responses": {
          "200": {
            "description": "이미지 목록 반환 성공",
            "schema": {
              "type": "object",
              "properties": {
                "images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "filename": { "type": "string" },
                      "image_base64": { "type": "string" },
                      "type": {
                        "type": "string",
                        "description": "uploaded 또는 generated"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reset-folders": {
      "post": {
        "tags": ["폴더 초기화"],
        "summary": "폴더 초기화",
        "description": "업로드된 이미지와 생성된 이미지 폴더의 내용을 초기화합니다.",
        "responses": {
          "200": {
            "description": "폴더 초기화 성공",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
